<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <title>Checkout</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            text-align: center;
            position: relative;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            display: flex;
            flex-direction: column; /* Align children vertically */
            align-items: center; /* Center children horizontally */
        }
        h1 {
            margin-top: 20px;
        }
        ul {
            list-style-type: none;
            padding: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        li {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            margin: 10px;
            text-align: left;
            flex: 0 1 300px; /* Each product item takes a maximum width of 300px */
            position: relative;
        }
        img {
            padding-top: 10px;
            max-width: 100%; /* Ensure images don't exceed container width */
            height: auto;
            margin: 0 auto; /* Center images horizontally */
            display: block;
        }
        .product-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .quantity {
            display: flex;
            align-items: center;
        }
        .quantity-button {
            padding: 5px;
            cursor: pointer;
        }
        .remove-button {
            position: absolute;
            top: 5px;
            right: 5px;
            padding: 5px;
            cursor: pointer;
        }
        .total {
            margin-top: 20px;
            font-size: 1.2rem;
        }
        .proceed-button {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .proceed-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Checkout</h1>
        <ul>
            <% cartItems.forEach(item => { %>
                <li>
                    <div class="product-info">
                        <div>
                            <strong><%= item.name %></strong><br>
                            Price: Rs. <%= item.price %>
                        </div>
                        <div class="remove-button" data-id="<%= item._id %>"><a><i class="ri-delete-bin-line"></i></a></div>
                    </div>
                    <img src="<%= item.imageUrl %>"><br>
                </li>
            <% }); %>              
        </ul>
        <div id="totalAmount" class="total">
            Total: Rs. <%= totalAmount %>
        </div>
        <a href="/checkout/proceed" class="proceed-button">Proceed to Payout</a>
          
    </div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const removeButtons = document.querySelectorAll('.remove-button');
    let totalAmount = 0; // Initialize total amount

    removeButtons.forEach(button => {
        button.addEventListener('click', function () {
            const productId = this.getAttribute('data-id');
            // Remove product from the UI
            this.parentElement.parentElement.remove();
            // Remove product from the cart list in the session
            fetch(`/cart/remove/${productId}`, { method: 'DELETE' })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Failed to remove product from cart');
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Product removed from cart:', data);
                    // Recalculate total amount
                    updateTotalAmount();
                })
                .catch(error => {
                    console.error('Error:', error);
                    // Handle error
                });
        });
    });

    function updateTotalAmount() {
        // Calculate total amount based on remaining items
        totalAmount = 0; // Reset total amount
        document.querySelectorAll('.product-info').forEach(productInfo => {
            const priceElement = productInfo.querySelector('.price');
            const price = parseFloat(priceElement.innerText.replace('Rs. ', ''));
            totalAmount += price; // Update total amount
        });
        document.getElementById('totalAmount').innerText = totalAmount.toFixed(2); // Display total amount
    }
});


</script>    
</body>
</html>
